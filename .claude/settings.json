{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read(./)",
      "Edit(./src/**)",
      "Edit(./Intents/**)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/secrets/**)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(chmod 777:*)",
      "Bash(curl | sh:*)",
      "Bash(wget | sh:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git reset --hard:*)"
    ]
  },

  "env": {},

  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "commit|push|save|done|ship|merge|finish|complete|deploy|deployed|finished",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'ALINE REMINDER: After completing this action, generate a smart 1-line summary of what was accomplished and call: use aline — commit: {your summary here}. Then ask the user: \"Want me to update Aline? → {summary}\"'"
          }
        ]
      }
    ]
  }
}
